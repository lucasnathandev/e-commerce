// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") @db.ObjectId
  user      String   @unique
  password  String
  email     String   @unique
  firstName String
  lastName  String
  rg        String   @unique
  cpf       String   @unique
  type      UserType
}

enum UserType {
  User
  Seller
}
